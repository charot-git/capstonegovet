<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgwhite"
    tools:context=".FrontEnd.AddFriend">

    <androidx.cardview.widget.CardView
        android:id="@+id/addPicCon"
        android:layout_width="100dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/addPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            tools:ignore="ImageContrastCheck" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/addName"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/addPicCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/slightfont"
        android:text="Name :"/>

    <TextView
        android:id="@+id/addUsername"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/addName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14dp"
        android:textColor="@color/slightfont"
        android:text="Username :">

    </TextView>

    <Button
        android:id="@+id/addFriendBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/addUsername"
        android:text="Add Friend"
        app:cornerRadius="30dp">

    </Button>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/addFriendBut"
        android:id="@+id/addPets"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="50dp">


                <ImageView
                    android:id="@+id/addPetsPic1"
                    android:elevation="4dp"
                    android:layout_width="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/todo"
                    android:scaleType="centerCrop"
                    tools:ignore="ImageContrastCheck" />

        </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                app:cardElevation="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/addPetsPic2"
                    android:elevation="4dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/todo"
                    android:scaleType="centerCrop"
                    tools:ignore="ImageContrastCheck" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/addPetsPic3"
                    android:elevation="4dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/todo"
                    android:scaleType="centerCrop"
                    tools:ignore="ImageContrastCheck" />

        </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>