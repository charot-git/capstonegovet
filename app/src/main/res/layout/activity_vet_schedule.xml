<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    tools:context=".FrontEndVet.vetSchedule">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/vetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_marginTop="70dp"
            android:id="@+id/schedule"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/vecadminbooks"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/schedules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/schedule"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:text="Appointments"
            android:textColor="@color/slightfont"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <!-- <TextView
             android:id="@+id/schedulesmonth"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="35dp"
             android:layout_marginEnd="30dp"
             android:layout_marginBottom="5dp"
             android:layout_below="@id/schedules"
             android:fontFamily="@font/poppins_medium"
             android:gravity="start"
             android:text="Month"
             android:textColor="@color/slightfont"
             android:textSize="18dp"
             android:textStyle="bold"/>-->


        <TextView
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/schedules"
            android:fontFamily="@font/poppins_medium"
            android:text="Month : "
            android:layout_marginLeft="60dp"
            android:textColor="@color/slightfont"
            android:textSize="18dp"
            android:textStyle="bold" />



        <androidx.cardview.widget.CardView
            android:layout_below="@id/month"
            android:id="@+id/appCon"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="8dp" >


            <LinearLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/detailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/userText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USER : "
                            android:textColor="@color/slightfont"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_below="@id/dateText"
                            android:textSize="16dp"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:id="@+id/DateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DATE : "
                            android:textColor="@color/slightfont"
                            android:fontFamily="@font/popins_light"
                            android:layout_below="@id/dateText"
                            android:textSize="16dp"
                            android:layout_marginLeft="20dp" />


                        <TextView
                            android:id="@+id/timeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TIME : "
                            android:textColor="@color/slightfont"
                            android:fontFamily="@font/popins_light"
                            android:layout_below="@id/dateText"
                            android:textSize="16dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="20dp"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/hamburger"
                android:layout_marginTop="20dp"
                android:layout_marginStart="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_hamburger"
                app:tint="@color/white" />
        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_govethome2"
        app:menu="@menu/activity_govet_admin_test2_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>