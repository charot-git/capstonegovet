<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrontEndAdmin.admitPetAdmin">

    <ImageView
        android:id="@+id/back"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:layout_below="@id/back"
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="start"
        android:text="name"
        android:textColor="@color/slightfont"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pet1"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_below="@+id/userName"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/petPic1Container"
            android:layout_width="100dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/petPic1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/todo"
                android:scaleType="centerCrop"
                tools:ignore="ImageContrastCheck" />
        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:id="@+id/pet1container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pet1Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/breed1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/popins_light"
                        android:text="Breed"
                        android:textColor="@color/slightfont"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/petname1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Name"
                        android:textColor="@color/slightfont"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/year1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/popins_light"
                        android:text="Age"
                        android:textColor="@color/slightfont"
                        android:textSize="14dp" />


                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pet2"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_below="@+id/pet1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/petPic2Container"
            android:layout_width="100dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/petPic2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/todo"
                android:scaleType="centerCrop"
                tools:ignore="ImageContrastCheck" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/pet2container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pet2Layout"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/breed2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/popins_light"
                        android:text="Breed"
                        android:textColor="@color/slightfont"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/petname2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Name"
                        android:textColor="@color/slightfont"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/year2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/popins_light"
                        android:text="Age"
                        android:textColor="@color/slightfont"
                        android:textSize="14dp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pet3"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_below="@+id/pet2"
        android:layout_marginLeft="30dp"
        app:cardElevation="4dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/petPic3Container"
            android:layout_width="100dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/petPic3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/todo"
                android:scaleType="centerCrop"
                tools:ignore="ImageContrastCheck" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/pet3container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pet3Layout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/breed3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/popins_light"
                        android:text="Breed"
                        android:textColor="@color/slightfont"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/petname3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Name"
                        android:textColor="@color/slightfont"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/year3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/popins_light"
                        android:text="Age"
                        android:textColor="@color/slightfont"
                        android:textSize="14dp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>