<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgwhite"
    tools:context=".FrontEndVet.vet_monitor_update_pet">


    <TextView
        android:id="@+id/monitorpet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text=" Pet name : "
        android:textColor="@color/slightfont"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/monitorStatus"
        android:layout_below="@id/monitorpet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text=" Status : "
        android:textColor="@color/slightfont"
        android:textSize="18dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/monitorStatus"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:cardElevation="4dp"
        app:cardCornerRadius="20dp">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/statusPet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/slightfont"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:hint="Status here" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/monitorDatetxt"
        android:layout_below="@id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text=" Date : "
        android:textColor="@color/slightfont"
        android:textSize="18dp" />

    <CalendarView
        android:id="@+id/monitorCalendar"
        android:layout_below="@id/monitorDatetxt"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </CalendarView>

    <!--<androidx.cardview.widget.CardView
        android:id="@+id/monitordate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/monitorDatetxt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/petDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/slightfont"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textSize="16dp"
             android:hint="Date here" />

    </androidx.cardview.widget.CardView>
-->
    <TextView
        android:id="@+id/monitorTimetxt"
        android:layout_below="@id/monitorCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text=" Time : "
        android:textColor="@color/slightfont"
        android:textSize="18dp" />

    <TimePicker
        android:id="@+id/monitorTime"
        android:layout_below="@id/monitorTimetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

    </TimePicker>

    <Button
        android:id="@+id/updatevetbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/monitorTime"
        android:layout_centerHorizontal="true"
        android:background="@color/blue"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/poppins_medium"
        android:text="UPDATE"
        android:textSize="14dp"
        android:textColor="@color/white"
        app:cornerRadius="50dp" />


</RelativeLayout>